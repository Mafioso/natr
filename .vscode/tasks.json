{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "bash",
	"args": [
        "-c"
    ],
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "Run Docker containers",
			"isBuildCommand": true,
			"args": ["docker-compose up"]
		},
		{
			"taskName": "Stop Docker containers",
			"isBuildCommand": false,
			"args": ["docker-compose kill"]
		},
		{
			"taskName": "Start NPM - compile build.js",
			"isBuildCommand": true,
			"args": ["cd natr-frontend && npm start"]
		},
		{
			"taskName": "Restart NPM",
			"isBuildCommand": false,
			"args": ["cd natr-frontend && killall -9 npm && npm start"]
		}
	]
}